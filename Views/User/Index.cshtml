@model List<Crud_Solid1.Models.TablaViewModels.UserTableViewModel>
@{
    ViewBag.Title = "Crud";
}

<h2>@ViewBag.Tittle</h2>

<div class="row" style="text-align:right; padding:5px; width:100px; height:40px;">
    <a href="~/User/Add" class="btn btn-primary">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Telefono</th>
                <th>Profesion</th>
                <th>Edad</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.id</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.Apellido</td>
                    <td>@oElemento.Telefono</td>
                    <td>@oElemento.Profesion</td>
                    <td>@oElemento.Edad</td>
                    <td>
                        <a class="btn btn-default" href="~/User/Edit/@oElemento.id">Editar</a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "User", new { id = oElemento.id })" onclick="return confirm('¿Estas seguro que deseas eliminarlo?')">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>